@model AppointmentScheduling.Models.ViewModels.LoginViewModel

<h2>Sign In</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginform">
            <form id="account" method="post" asp-action="Login" asp-controller="Account">
                <h4>Use your registered email id and password to login</h4>
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group row">
                    <label class="col-md-2" asp-for="Email"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password"></label>
                    <div class="col-md-10">
                        <input class="form-control" asp-for="Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-2 checkbox">
                        <label asp-for="RememberMe" class="pr-1 pl-0">
                            <input asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Sign up</a>
                </p>
            </form>
        </section>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}